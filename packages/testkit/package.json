{
  "name": "@aligntrue/testkit",
  "version": "0.1.0-alpha.2",
  "description": "Conformance testkit for Align Spec v1 implementations",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./vectors/*": "./vectors/*",
    "./golden/*": "./golden/*"
  },
  "files": [
    "dist",
    "vectors",
    "golden",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@aligntrue/checks": "workspace:*",
    "@aligntrue/schema": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.0",
    "vitest": "^4.0.6",
    "yaml": "^2.3.4"
  },
  "keywords": [
    "aligntrue",
    "conformance",
    "testkit",
    "validation"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  }
}
