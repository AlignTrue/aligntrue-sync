{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aligntrue.ai/schema/align-manifest-v1.schema.json",
  "title": "Align Manifest v1",
  "description": "Schema for .align.yaml manifest files that define curated bundles of rules and configurations for sharing",
  "type": "object",
  "required": ["id", "version"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+/[a-z0-9-]+$",
      "description": "Unique identifier in author/name format (e.g., 'aligntrue/typescript-starter')"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-z0-9.-]+)?(\\+[a-z0-9.-]+)?$",
      "description": "Semantic version (MAJOR.MINOR.PATCH)"
    },
    "summary": {
      "type": "string",
      "maxLength": 200,
      "description": "One-line description for sharing and discovery"
    },
    "author": {
      "type": "string",
      "description": "Author identifier (e.g., '@username' or 'Organization Name')"
    },
    "license": {
      "type": "string",
      "description": "SPDX license identifier (e.g., 'MIT', 'CC0-1.0')"
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "URL to documentation or homepage"
    },
    "repository": {
      "type": "string",
      "format": "uri",
      "description": "URL to source repository"
    },
    "includes": {
      "type": "object",
      "properties": {
        "rules": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Relative paths to rule .md files to include"
        },
        "skills": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Relative paths to skill .md files to include (future)"
        },
        "mcp": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Relative paths to MCP configuration files (future)"
        }
      },
      "additionalProperties": false,
      "description": "Content to include in this align"
    },
    "customizations": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/customization"
      },
      "description": "Author-recommended customizations keyed by relative file path"
    },
    "defaults": {
      "type": "object",
      "properties": {
        "exporters": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Default exporters to enable (e.g., ['cursor', 'agents'])"
        },
        "mode": {
          "type": "string",
          "enum": ["solo", "team"],
          "description": "Default mode for new users"
        }
      },
      "additionalProperties": false,
      "description": "Default settings for consumers"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "description": "Categorization tags for discovery"
    },
    "compatible_agents": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of compatible AI agents (e.g., ['cursor', 'claude', 'github-copilot'])"
    }
  },
  "$defs": {
    "customization": {
      "type": "object",
      "properties": {
        "plugs": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Pre-filled plug values for this file"
        },
        "frontmatter": {
          "type": "object",
          "properties": {
            "globs": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Override glob patterns for when rule applies"
            },
            "enabled": {
              "type": "boolean",
              "description": "Whether this rule is enabled by default"
            }
          },
          "additionalProperties": true,
          "description": "Frontmatter overrides for this file"
        }
      },
      "additionalProperties": false,
      "description": "Customization settings for a specific file"
    }
  }
}
