{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aligntrue.ai/schemas/exporter-manifest.json",
  "title": "AlignTrue Exporter Manifest",
  "description": "Describes an AlignTrue exporter.",
  "type": "object",
  "required": ["name", "version", "description", "outputs"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Exporter name (lowercase alphanumeric with hyphens)"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., 1.0.0)"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "description": "Human-readable description of the exporter"
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "File patterns produced by this exporter (e.g., .cursor/rules/*.mdc)"
    },
    "handler": {
      "type": "string",
      "description": "Optional: relative path to TypeScript handler (e.g., ./index.ts)"
    },
    "license": {
      "type": "string",
      "default": "MIT",
      "description": "License identifier (e.g., MIT, Apache-2.0)"
    },
    "fidelityNotes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Optional: list of semantic mapping limitations or caveats"
    },
    "author": {
      "type": "string",
      "description": "Optional: author or organization name"
    },
    "supportedFormats": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["native", "agents-md"]
      },
      "description": "Optional: export formats this exporter supports (default: ['native'])"
    },
    "defaultFormat": {
      "type": "string",
      "enum": ["native", "agents-md"],
      "description": "Optional: default export format for this exporter (default: 'native')"
    }
  },
  "additionalProperties": false
}
