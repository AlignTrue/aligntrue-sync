{
  "name": "@aligntrue/exporters",
  "version": "0.1.1-alpha.3",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./cursor": "./dist/cursor/index.js",
    "./agents-md": "./dist/agents-md/index.js",
    "./vscode-mcp": "./dist/vscode-mcp/index.js"
  },
  "scripts": {
    "build": "tsc && node -e \"const fs=require('fs'),path=require('path');function copyManifests(dir){fs.readdirSync(dir,{withFileTypes:true}).forEach(e=>{const p=path.join(dir,e.name);if(e.isDirectory())copyManifests(p);else if(e.name==='manifest.json'){const t=p.replace('src','dist');fs.mkdirSync(path.dirname(t),{recursive:true});const content=fs.readFileSync(p,'utf8');const fixed=content.replace(/\\\"\\.\\/index\\.ts\\\"/g,'\\\"./index.js\\\"');fs.writeFileSync(t,fixed)}})};copyManifests('src')\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@aligntrue/core": "workspace:*",
    "@aligntrue/file-utils": "workspace:*",
    "@aligntrue/plugin-contracts": "workspace:*",
    "@aligntrue/schema": "workspace:*",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "yaml": "^2.6.1"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public"
  }
}
