{
  "name": "@aligntrue/cli",
  "version": "0.1.1-alpha.4",
  "type": "module",
  "bin": {
    "aligntrue": "./dist/index.js",
    "aln": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:comprehensive": "tsx tests/comprehensive/run-all-layers.ts",
    "test:layer": "tsx tests/comprehensive/run-single-layer.ts",
    "test:report": "tsx tests/comprehensive/generate-report.ts",
    "test:local": "bash tests/scripts/test-local-build.sh",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@aligntrue/core": "workspace:*",
    "@aligntrue/exporters": "workspace:*",
    "@aligntrue/markdown-parser": "workspace:*",
    "@aligntrue/schema": "workspace:*",
    "@aligntrue/sources": "workspace:*",
    "@clack/prompts": "^0.11.0",
    "chokidar": "^4.0.3",
    "diff": "^8.0.2",
    "yaml": "^2.6.1"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/diff": "^8.0.0"
  },
  "license": "MIT"
}
