{
  "name": "aligntrue",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "build:packages": "pnpm -r --filter '@aligntrue/schema' build && pnpm -r --filter '@aligntrue/markdown-parser' --filter '@aligntrue/plugin-contracts' --filter '@aligntrue/file-utils' build && pnpm -r --filter '@aligntrue/core' --filter '@aligntrue/sources' --filter '@aligntrue/testkit' build && pnpm -r --filter '@aligntrue/exporters' --filter '@aligntrue/cli' --filter aligntrue build",
    "dev": "pnpm --filter @aligntrue/docs dev",
    "dev:packages": "pnpm -r --filter ./packages/* --parallel build --watch",
    "start:docs": "node scripts/start-docs.mjs",
    "test": "pnpm -r test",
    "test:fast": "pnpm -r test --reporter=dot --pool=forks",
    "verify": "pnpm --filter @aligntrue/testkit test",
    "testkit:verify": "pnpm verify",
    "typecheck": "pnpm -r --filter '@aligntrue/schema' typecheck && pnpm -r --filter '@aligntrue/markdown-parser' --filter '@aligntrue/plugin-contracts' --filter '@aligntrue/file-utils' typecheck && pnpm -r --filter '@aligntrue/core' --filter '@aligntrue/sources' --filter '@aligntrue/testkit' typecheck && pnpm -r --filter '@aligntrue/exporters' --filter '@aligntrue/cli' --filter aligntrue typecheck",
    "validate:ui-tsconfig": "node scripts/validate-ui-tsconfig.mjs",
    "validate:transpile-packages": "node scripts/validate-transpile-packages.mjs",
    "validate:no-duplicate-docs": "node scripts/validate-no-duplicate-docs.mjs",
    "validate:docs-links": "node scripts/check-docs-links.js",
    "lint": "eslint . --max-warnings 100",
    "lint:fix": "eslint . --fix",
    "lint:strict": "eslint . --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pre-ci": "node scripts/pre-ci.mjs",
    "pre-refactor": "node scripts/pre-refactor.mjs",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist archive/*/node_modules archive/*/.next archive/*/dist",
    "clean-temp": "find . -type f -name 'temp-*' -not -path '*/node_modules/*' -delete",
    "bootstrap": "pnpm install && pnpm build",
    "prepare": "husky",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "setup-release": "node scripts/setup-release.mjs"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --max-warnings 100"
    ],
    "*.{md,json,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@clack/prompts": "^0.11.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@next/eslint-plugin-next": "^16.0.1",
    "@types/node": "^24",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "fast-xml-parser": "^5.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "dependencies": {
    "yaml": "^2.8.1"
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0",
      "prismjs": ">=1.30.0"
    }
  }
}
