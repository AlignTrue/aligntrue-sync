{
  "name": "aligntrue",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "build:catalog": "node temp-build-catalog.mjs",
    "build:packages": "pnpm -r --filter './packages/*' build",
    "dev:web": "pnpm --filter @aligntrue/web dev",
    "dev:docs": "pnpm --filter @aligntrue/docs dev",
    "dev:all": "concurrently \"pnpm dev:web\" \"pnpm dev:docs\"",
    "dev:packages": "pnpm -r --filter './packages/*' --parallel build --watch",
    "test": "pnpm -r test",
    "test:fast": "pnpm -r test --reporter=dot --pool=threads",
    "verify": "pnpm --filter @aligntrue/testkit test",
    "testkit:verify": "pnpm verify",
    "typecheck": "pnpm -r typecheck",
    "validate:ui-tsconfig": "node scripts/validate-ui-tsconfig.mjs",
    "validate:transpile-packages": "node scripts/validate-transpile-packages.mjs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pre-refactor": "node scripts/pre-refactor.mjs",
    "generate:repo-files": "tsx scripts/generate-repo-files.ts",
    "validate:repo-files": "tsx scripts/validate-repo-files.ts",
    "docs:build": "pnpm generate:repo-files && pnpm --filter @aligntrue/docs build",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist archive/*/node_modules archive/*/.next archive/*/dist",
    "clean-temp": "find . -type f -name 'temp-*' -not -path '*/node_modules/*' -delete",
    "bootstrap": "pnpm install && pnpm build",
    "prepare": "husky",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,md,json,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@clack/prompts": "^0.11.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@next/eslint-plugin-next": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "fast-xml-parser": "^5.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "dependencies": {
    "@types/react-syntax-highlighter": "^15.5.13",
    "react-syntax-highlighter": "^16.1.0",
    "yaml": "^2.8.1"
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0",
      "prismjs": ">=1.30.0",
      "next": "15.4.7"
    }
  }
}
