{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm build",
  "devCommand": "pnpm dev",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "public": false,
  "regions": ["iad1"],
  "redirects": [
    {
      "source": "/quickstart",
      "destination": "/docs/00-getting-started/00-quickstart",
      "permanent": true
    },
    {
      "source": "/scopes",
      "destination": "/docs/02-customization/scopes",
      "permanent": true
    },
    {
      "source": "/adapters",
      "destination": "/docs/04-reference/agent-support",
      "permanent": true
    },
    {
      "source": "/remote-setup",
      "destination": "/docs/01-guides/team-workflows",
      "permanent": true
    },
    {
      "source": "/dup-rules",
      "destination": "/docs/03-concepts/preventing-duplicate-rules",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains"
        }
      ]
    }
  ]
}
